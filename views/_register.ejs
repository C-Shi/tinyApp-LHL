<% include ./partials/_head.ejs %>
<div class="container">
  <div class="row">
    <form action="/register" method="POST" class="col-8 form">
      <h3 class="text-center">Register with us</h3>
      <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" placeholder="youremail@email.com" class="form-control" required>
      </div>
      <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" placeholder="********" class="form-control" required>
      </div>
      <button class="btn btn-outline-success btn-lg">Register</button>
      <a href="/login" class="btn btn-outline-secondary btn-lg">Aleady Registered? Login</a>
    </form>
  </div>
</div>