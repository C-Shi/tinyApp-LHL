<% include ./partials/_head.ejs %>
  <body>
    <% include ./partials/_header.ejs %>
    <% if (user) { %>
      <!-- if user exist check url ownership -->
      <% for (url in urls){ %>
        <!-- check if this particular url is owned by this particular owner -->
        <% if (urls[url].userID === user.id){ %>
          <div>
            <%= url%>: <a href="#"><%= urls[url].longURL%></a> &nbsp; 
            <a href="/urls/<%= url%>">Edit</a>
            <form method="POST" action="/urls/<%= url %>/delete?_method=DELETE" style="display:inline">
              <button>Delete</button>
            </form>
            <p style="display:inline"><%= urls[url].visits%> visits with <%= urls[url].length || 0 %> unique user</p>
            <p style="display: inline">Created At <%= urls[url].createdAt%></p>
          </div>
        <% } %>
      <% } %> 
      <a href="/urls/new">Create a new short Link</a>
      <!-- if no user, show info encourage user to login or register -->
    <% }else{ %>
      <h2>Unfortunately, In order to use this app, you must login</h2>
    <% } %>
  </body>
</html>