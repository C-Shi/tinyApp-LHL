<% include ./partials/_head.ejs %>
  <body>
    <% include ./partials/_header.ejs %>
    <!-- check if shortURL is in the database, if not then tell user it is not found -->
    <% if (longURL.hasOwnProperty(shortURL)) { %>
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h3>ShortURL: <a href="/u/<%= shortURL%>">tinyApp.ca/u/<%= shortURL%></a></h3>
            <p>This URL has been visited: <span class="emphasis"><%= longURL[shortURL].visits%></span></p>
            <p>This URL has been visited by: <span class="emphasis"><%= longURL[shortURL].visitor.length%></span> unique users</p>
            <p style="display: inline">Created At <%= longURL[shortURL].createdAt%></p>
          </div>
          <div class="col-md-6">
            <form action="/urls/<%= shortURL%>?_method=PUT" method="POST">
              <div class="form-group">
                <label>Update this URL</label>
                <input name="longURL" value="<%= longURL[shortURL].longURL %>" class="form-control">
              </div>
              <button class="btn btn-outline-success btn-sm">Update</button>
              <a href="/urls" class="btn btn-secondary btn-sm">Go Back</a>
            </form>
          </div>
        </div>
      </div>
      </div>
    <% } else { %>
      <p>Cannot find this shortURL</p>
    <% } %>
  </body>
</html>